<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <input id="queue-input" type="text">
    <p id="queue-cont">队列内容：apple&lt;-pear</p>
    <button id="in-btn">入队</button>
    <button id="out-btn">出队</button>
    <button id="font-btn">打印队头元素内容</button>
    <button id="empty-btn">判断队列是否为空</button>

    <script>
        var queue = ["apple", "pear"];
        let txt = document.getElementById('queue-input');
        var queueCont = document.getElementById('queue-cont');
        let inbtn = document.getElementById('in-btn');
        let outbtn = document.getElementById('out-btn');
        let fontbtn = document.getElementById('font-btn');
        let emptybtn = document.getElementById('empty-btn');

        inbtn.onclick = function() {
            queue.push(txt.value);
            queueCont.innerHTML = '队内容：' + queue.join('&lt-');

        }
        outbtn.onclick = function() {
            queue.shift();
            queueCont.innerHTML = "队内容：" + queue.join("&lt-");
        }
        fontbtn.onclick = function() {
            queueCont.innerHTML = '队内容：' + queue[0];
        }
        emptybtn.onclick = function() {
            if (queue.length == 0) {
                queueCont.innerHTML = "队内容：空";
            } else {
                queueCont.innerHTML = "队内容：不为空";
            }
        }
    </script>
</body>
</html>
